{
    "layer": "top", // Waybar at top layer
    "position": "top", // Waybar position (top|bottom|left|right)
    // "height": 34, // Waybar height
    // "width": 1280, // Waybar width
    // Choose the order of the modules
    "modules-left": [
        "sway/workspaces",
        "sway/mode"
    ],
    "modules-center": [
//		"sway/window",
      "custom/nowplaying"
	],
    "modules-right": [
        "idle_inhibitor",
        "pulseaudio",
        "network",
        "cpu",
        "memory",
        "disk",
        "battery",
        "clock",
        "tray"
    ],
    // Modules configuration
    "sway/workspaces": {
        "disable-scroll": false,
        "disable-scroll-wraparound": true,
        "all-outputs": false,
        "format": "{name} {icon}",
        "format-icons": {
            "1": "ÔÑ†",
            "2": "ÔÇ¨",
            "3": "ÔÄ•",
            "4": "ÔÅµ",
            "urgent": "ÔÅ™",
            "focused": "ÔÜí",
            "default": "ÔÑë"
        }
    },
	"sway/window": {
    	"format": "{} | ",
    	"max-length": 50
	},
    "sway/mode": {
        "format": "<span style=\"italic\">{}</span>"
    },
    "idle_inhibitor": {
        "format": "<span>{icon}</span>",
        "format-icons": {
            "activated": "ÔÅÆ",
            "deactivated": "ÔÅ∞"
        }
    },
    "memory": {
        "interval": 30,
        "format": "{}% ÔÉâ",
        "max-length": 10
    },
    "disk": {
        "interval": 30,
//        "format": "{percentage_free}%",
        "format": "{free} üíΩ",
        "path": "/mnt/rootbtrfs"
    },
    "battery": {
        "bat": "BAT0",
        "interval": 60,
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"],
        "max-length": 25
    },
    "tray": {
        // "icon-size": 21,
        "spacing": 10
    },
    "clock": {
        "format": "{:%a, %b %d | %H:%M}",
        "timezone":"Europe/Copenhagen",
        "timezones":["Europe/Copenhagen","UTC"],
        "tooltip-format": "{:%Y-%m-%d | %H:%M}",
        "format-alt": "{:%Y-%m-%d}",
        "interval": 1
    },
    "cpu": {
        "format": "{usage}% Ôãõ"
    },
    "network": {
      "format-ethernet": "{ifname}: {ipaddr}/{cidr} ÔÉÅ",
      "format-wifi": "{essid} {signalStrength}ÔÉÅ",
        "format-disconnected": "Disconnected ‚ö†",
      	"interval": 3
    },
    "pulseaudio": {
        //"scroll-step": 1,
        "format": "{volume}% {icon}",
        "format-bluetooth": "{volume}% {icon}Ôäî",
        "format-muted": "ÔÄ¶",
        "format-icons": {
            "headphones": "ÔÄ•",
            "handsfree": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄß", "ÔÄ®"]
        },
        "on-click": "pavucontrol"
    },
    "custom/nowplaying": {
        "interval": 2,
        "format": "{}",
        "max-length": 80,
        "escape": true,
        "exec": "$HOME/.config/waybar/nowplaying.sh"
    }
}
