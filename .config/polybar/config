ws-icon-2 = 3;Ôâ©
ws-icon-3 = 4;
ws-icon-4 = 5;ÔÉ†
ws-icon-5 = 6;ÔÄΩ
ws-icon-6 = 7;ÔÑâ
ws-icon-7 = 8;ÔÅº
ws-icon-8 = 9;ÔãÜ
ws-icon-9 = 10;ÔÜ∞
ws-icon-default = "Ôâ¨ "

; Available tags:
;   <label-state> (default) - gets replaced with <label-(focused|unfocused|visible|urgent)>
;   <label-mode> (default)
format = <label-state> <label-mode>

